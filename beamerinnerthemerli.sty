                    \usebeamerfont{author}{\insertauthor\par\vspace{0.5cm}}
                    \usebeamerfont{institute}{\insertinstitute\par\vspace{0.1cm}}
                    \usebeamerfont{date}{\insertdate\par}
                \end{minipage}
            }
        \end{picture}
}

