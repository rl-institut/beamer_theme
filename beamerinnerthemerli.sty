% Itemize environment
\setbeamertemplate{itemize item}{\color{rliblue}$\blacktriangleright$}
\setbeamertemplate{itemize subitem}{\color{rliblue}$\blacktriangleright$}

\setbeamertemplate{navigation symbols}{}
